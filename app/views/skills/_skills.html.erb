<ul>
<!-- !element.id.nil? is same as element.id != nil -->
	<% @profile.skills.select{|element| !element.id.nil? }.each do |s| %>
		<li><%= s.name %> 
		<% if @profile.id == s.profile_id %>
			<%= link_to "X", [s.profile, s],
					method: :delete,
					data: { confirm: "Are you sure?" } %>
		<% end %>
	<% end %>
</ul>

