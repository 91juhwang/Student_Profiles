<%= form_for @profile, method: :patch do |f| %>
	<%= f.text_field :name, placeholder:'Name' %>
	<%= f.text_area :status, placeholder:'Describe yourself in 1 or 2 sentences' %>
	<%= f.text_field :location, placeholder:'Where do you live?' %>
	<%= f.hidden_field :student_id, :value => current_student.id %>
	<%= f.submit 'Submit', id:'profile_submit' %>
<% end %>