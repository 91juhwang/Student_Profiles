<%= form_for @profile  do |f| %>
	<%= f.text_field :name, placeholder:'Name' %>
	<%= f.text_area :description, placeholder:'Describe yourself in 1 or 2 sentences' %>
	<%= f.text_field :location, placeholder:'Where do you live?' %>
	<a href="https://nycda.com/courses">See what <%=current_student.email%> has learned from NYCDA!</a>
	<%= f.hidden_field :student_id, :value => current_student.id %>
	<%= f.submit 'Submit', id:'profile_submit' %>
<% end %>