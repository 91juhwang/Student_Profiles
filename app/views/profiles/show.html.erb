<h3>Current Student's profile</h3>

<p>student_id: <%= @profile.student.id %></p>
<p>profile_id: <%= @profile.id %></p>
Name: <%= @profile.name %> <br>
Summary: <%= @profile.description %> <br>
<%= @profile.location %>
<%= @profile.course %>

<!-- Skills Section -->
<% if student_signed_in? && @profile.student.id == current_student.id %>
	<%= render "skills/form" %>
	<%= render "skills/skills" %>
<% else %>
	<h3>Skills: </h3>
	<ul>
		<% @profile.skills.each do |s| %>
			<li>
				<%= s.name %>
			</li>
		<% end %>
	</ul>
<% end %>

<!-- Experience Section -->
<% if student_signed_in? && @profile.student.id == current_student.id %>
	<%= render "experiences/form" %>
	<%= render "experiences/experiences" %>
<% else %>
	<h3>Experiences: </h3>
	<ul>
		<% @profile.experiences.each do |e| %>
			<li><%= e.title %></li>
			<li><%= e.company %></li>
			<li><%= e.description %></li>
			<li><%= e.start %></li>
			<li><%= e.end %></li>
		<% end %>
	</ul>
<% end %>


