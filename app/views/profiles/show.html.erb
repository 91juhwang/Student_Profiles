<h3>Current Student's profile</h3>

<p>student_id: <%= @profile.student.id %></p>
<p>profile_id: <%= @profile.id %></p>
Name: <%= @profile.name %> <br>
Summary: <%= @profile.description %> <br>
<%= @profile.location %>
<%= @profile.course %>

<hr>

<% if student_signed_in? && @profile.student.id == current_student.id %>
	<%= render "skills/form" %>
	<%= render "skills/skills" %>
	<%= render "experiences/form" %>
	<%= render "experiences/experiences" %>
	<%= render "educations/form" %>
	<%= render "educations/educations" %>
<% else %>
	<h3>Skills: </h3>
	<ul>
		<% @profile.skills.each do |s| %>
			<li><%= s.name %></li>
		<% end %>
	</ul>
	<h3>Experiences: </h3>
	<ul>
		<% @profile.experiences.each do |e| %>
			<li><%= e.title %></li>
			<li><%= e.company %></li>
			<li><%= e.description %></li>
			<li><%= e.start %></li>
			<li><%= e.end %></li>
		<% end %>
	</ul>
	<h3>Educations: </h3>
	<ul>
		<% @profile.educations.each do |e| %>
			<li><%= e.school %></li>
			<li><%= e.major %></li>
			<li><%= e.start %></li>
			<li><%= e.graduate %></li>
		<% end %>
	</ul>
<% end %>
