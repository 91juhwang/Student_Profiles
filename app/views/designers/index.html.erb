<div>
	<h2>
		Designers
	</h2>
	<!-- Designers view page -->
	<div class="paginate">
		<% @designers.each do |des| %>
			<% if des.profile != nil && des.profile.experiences.last != nil && des.profile.educations.last != nil %>
				<h4><%= link_to des.profile.name, profile_path(des.profile.id) %></h4>
				<h5>Expeirence:</h5>
				<p>
					Previously a 
					<%= des.profile.experiences.last.title %> at 
					<%= des.profile.experiences.last.company %>
				</p>
				<h5>Education: </h5>
				<p>
					Degree in 
					<%= des.profile.educations.last.major %>
					at
					<%= des.profile.educations.last.school %>
				</p>
				<h5> Skills: </h5>
				<% des.profile.skills.each do |s| %>
					<%= s.name %>, 
				<% end %>
			<% end %>
		<% end %>
	</div>
	<div class="paginate_nav">
		<%= will_paginate @designers %>
	</div>	
</div>