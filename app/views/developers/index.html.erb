<div class="devPageHeader">
	<div class="container">
		<h1>Meet Our Developers</h1>
	</div>
</div>

<div class="container">
	<!-- Devs view page -->
	<div class="devList row">
		<% @developers.each do |dev| %>
			<% if !dev.profile.nil? && !dev.profile.experiences.last.nil? && !dev.profile.educations.last.nil? %>
			<!-- picture -->
			<div class="col-md-2 devAvatar">
				<%= image_tag dev.profile.avatar.url(:thumb) if dev.profile.avatar %>
			</div>

			<div class="col-md-6">
			<!-- Name -->
				<h2><%= link_to dev.profile.name.capitalize, profile_path(dev.profile.id) %></h2>
			<!-- Status -->
				<h4><em>I'm currently <%= dev.profile.status %> </em></h4>
			<!-- location -->
				<h5 class="location">
					<span class="glyphicon glyphicon-map-marker"></span> <%= dev.profile.location %> 
				</h5><br>
			</div>

		<div class="row container">
			<!-- Experiences -->
			<div class="col-md-4">
				<p>
					<span class="glyphicon glyphicon-briefcase"></span>
					Previously a <b><%= dev.profile.experiences.last.title %></b>
					at <b><%= dev.profile.experiences.last.company %></b>
				</p>
			</div>
			<!-- Education -->
			<div class="col-md-4">
				<p>
					<span class="glyphicon glyphicon-education"></span>
					Degree in <b><%= dev.profile.educations.last.major %></b>
					at <b><%= dev.profile.educations.last.school %></b>
				</p>
			</div>
			<!-- Skills -->
			<div class="col-md-4">
				<p>
					<span class="glyphicon glyphicon-wrench"></span>
					<% dev.profile.skills.each do |s| %>
						{ <%= s.name %> }
					<% end %>
				</p>
			</div>
		</div>
		<hr>
			<% end %>
		<% end %>
	</div>
	<!-- Paginate -->
	<div class="paginate_nav">
		<%= will_paginate @developers %>
	</div>
</div>	
